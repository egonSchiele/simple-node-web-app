{
  "name": "simple-node-web-app",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build-backend": "tsc -p src/backend/tsconfig.json",
    "build-frontend": "tsc -p src/frontend/tsconfig.json && vite build",
    "build": "yarn build-backend && yarn build-frontend",
    "start": "node dist/backend/index.js",
    "frontend-watch": "vite build --watch",
    "backend-watch": "nodemon --watch src/backend -e ts,js,tsx,jsx --exec 'yarn build-backend && yarn start'",
    "watch": "concurrently 'yarn frontend-watch' 'yarn backend-watch'",
    "test": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "compression": "^1.7.5",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite-express": "^0.20.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "sass-embedded": "^1.83.4",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
