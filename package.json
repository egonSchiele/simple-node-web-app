{
  "name": "simple-node-web-app",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build-backend": "tsc -p src/backend/tsconfig.json && tsc-alias -p src/backend/tsconfig.json",
    "build-frontend": "tsc -p src/frontend/tsconfig.json && vite build",
    "build": "yarn build-backend && yarn build-frontend",
    "start": "node dist/backend/index.js",
    "frontend-watch": "vite build --watch",
    "backend-watch": "nodemon --watch src/backend -e ts,js,tsx,jsx --exec 'yarn build-backend && yarn start'",
    "watch": "concurrently 'yarn frontend-watch' 'yarn backend-watch'",
    "test": "vitest",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "prepare": "git config core.hooksPath scripts/hooks"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "compression": "^1.7.5",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite-express": "^0.20.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@tailwindcss/vite": "^4.0.3",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "sass-embedded": "^1.83.4",
    "tailwindcss": "^4.0.3",
    "tsc-alias": "^1.8.10",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
